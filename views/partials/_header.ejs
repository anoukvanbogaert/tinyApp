<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info" style="background-color: #F8C8DC;">
    <img src="../../public/images/favicon.ico" alt="Logo" width="30" height="45" class="d-inline-block align-text-top">
    <a class="navbar-brand" href="/urls"> TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarcd ../
    kup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username !==undefined) { %>
      <h4>Welcome, <%= username %>!</h4>
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
      <% } else { %>
        <form method="POST" action="/login">
          <label for="userLogin"></label>
          <input id="userLogin" type="text" name="username" placeholder="username">
          <button type="submit" class="btn btn-light">Login</button>
        </form>
        <% } %>
  </nav>
</header>